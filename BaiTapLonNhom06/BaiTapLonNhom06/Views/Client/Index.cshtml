@model IEnumerable<BaiTapLonNhom06.Models.Client>

@{
    ViewData["Title"] = "Index";
}

<h1>Danh sách khách hàng</h1>

<p>
    <a asp-action="Create">Tạo Khách Hàng Mới</a>
</p>
<table class="table">
    <thead>
        <tr>
             <th>
                @Html.DisplayNameFor(model => model.KhachhangID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ten)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GioiTinh)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SĐT)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CMND)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sophong)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ngayra)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ngayvao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
             <td>
                @Html.DisplayFor(modelItem => item.KhachhangID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ten)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GioiTinh.TenGioiTinh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SĐT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CMND)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sophong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ngayra)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ngayvao)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.KhachhangID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.KhachhangID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.KhachhangID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
